{
  "name": "book",
  "version": "0.1.0",
  "description": "An example generated by Charizard",
  "private": true,
  "scripts": {
    "copy-env:dev": "cp .env.local.example .env.local",
    "copy-env:staging": "cp .env.staging .env.local",
    "copy-env:prod": "cp .env.production .env.local",
    "dev": "yarn copy-env:dev && next dev",
    "start": "next start",
    "build": "next build",
    "build:staging": "yarn copy-env:staging && next build",
    "build:prod": "yarn copy-env:prod && next build",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook",
    "checkTs": "tsc --noEmit",
    "generate": "cross-env DOTENV_CONFIG_PATH=./.env.staging graphql-codegen -r dotenv/config --config codegen.yml",
    "generate:ci": "DOTENV_CONFIG_PATH=./.env.staging graphql-codegen -r dotenv/config --config codegen.yml",
    "generate:prod": "DOTENV_CONFIG_PATH=./.env.production graphql-codegen -r dotenv/config --config codegen.yml",
    "test": "jest --watch",
    "test:ci": "jest --ci",
    "lint": "next lint && eslint ./src",
    "beautiful": "eslint --fix && prettier --write .",
    "sonar": "sonar-scanner -Dsonar.host.url=$PLATFORM_SONAR_HOST -Dsonar.login=$PLATFORM_SONAR_TOKEN -Dsonar.projectVersion=$CI_COMMIT_SHORT_SHA",
    "lint:css": "stylelint src/**/*.css",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{ts,tsx}": [
      "yarn beautiful",
      "yarn lint"
    ],
    "**/*.{css,scss}": [
      "yarn lint:css"
    ]
  },
  "dependencies": {
    "@tanstack/react-query": "4.14.1",
    "axios": "1.1.3",
    "cross-fetch": "3.1.5",
    "cookies-next": "2.1.1",
