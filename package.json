    "react": "18.2.0",
    "react-dom": "18.2.0",
    "zustand": "4.1.4",
    "typescript": "4.8.4",
    "@headlessui/react": "1.7.4",
    "classnames": "2.3.2",
    "@apollo/client": "3.7.1",
    "graphql": "16.6.0",
    "styled-components": "5.3.6"
  },
  "devDependencies": {
    "@tanstack/react-query-devtools": "4.14.1",
