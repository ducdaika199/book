    "@storybook/react": "6.5.13",
    "@storybook/testing-library": "0.0.13",
    "eslint-plugin-storybook": "0.6.7",
    "postcss": "8.4.18",
    "autoprefixer": "10.4.13",
    "@types/styled-components": "5.1.26",
    "@commitlint/cli": "17.2.0",
